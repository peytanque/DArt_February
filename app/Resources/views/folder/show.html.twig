{% extends 'base.html.twig' %}

{% block body %}
    <h1>Folder</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ folder.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ folder.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('folder_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('folder_edit', { 'id': folder.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
