{% extends "DRPlatformBundle::layout.html.twig" %}

{% block body %}
    <h1>Area list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Country</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for area in areas %}
            <tr>
                <td><a href="{{ path('dr_area_show', { 'id': area.id }) }}">{{ area.id }}</a></td>
                <td>{{ area.country }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('dr_area_show', { 'id': area.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('dr_area_edit', { 'id': area.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dr_area_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
