{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ref</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ref.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ ref.name }}</td>
            </tr>
            <tr>
                <th>Folder</th>
                <td>{{ ref.folder.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dr_ref_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('dr_ref_edit', { 'id': ref.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
